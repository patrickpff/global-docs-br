{
    "compilerOptions": {
        "target": "es2020",
        "module": "nodenext",
        "lib": ["ES2020"],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": [
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}