{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",

        "lib": ["ES2022"],

        "types": ["node", "vitest/globals"],
        
        "outDir": "dist",
        "rootDir": "src",

        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,

        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": [
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}
